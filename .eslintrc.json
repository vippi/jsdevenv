{
    // from :
    //https://gist.github.com/coryhouse/61f866c7174220777899bcfff03dab7f

    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "rules": {
        "no-console": 1 // 0-off 1-warning 2-error
    }
}